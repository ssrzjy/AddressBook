<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_name"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/string_name"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/name_input2"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/text_name"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:id="@+id/sort_text"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/string_sort"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/name_input2"
        tools:ignore="MissingConstraints" />
    <Spinner
        android:id="@+id/sort_input"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="12sp"
        android:entries="@array/spinnerclass"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:layout_constraintLeft_toRightOf="@+id/sort_text"
        />
    <TextView
        android:id="@+id/text_phonenumber"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/string_phonenumber"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        />
    <EditText
        android:id="@+id/number_input"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/text_phonenumber"
        app:layout_constraintTop_toBottomOf="@+id/text_name"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/text_email"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/string_email"
        app:layout_constraintTop_toBottomOf="@+id/text_phonenumber"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        />
    <EditText
        android:id="@+id/email_input"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/text_email"
        app:layout_constraintTop_toBottomOf="@+id/text_phonenumber"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        />
    <TextView
        android:id="@+id/text_notes"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="@string/string_notes"
        app:layout_constraintTop_toBottomOf="@+id/text_email"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        />
    <EditText
        android:id="@+id/notes_input"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/text_notes"
        app:layout_constraintTop_toBottomOf="@+id/text_email"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        />


</androidx.constraintlayout.widget.ConstraintLayout>